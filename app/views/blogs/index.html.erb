<h1>Blog home</h1>

<section class="container">
  <%= link_to "New Post", new_blog_path %>
  <% @blogs.each do |blog| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to blog.title, blog %></h3>
      </div>
      <div class="panel-body">
        By: <%= blog.creator %>, <%= time_ago_in_words(blog.created_at) %> ago on <%= blog.created_at.strftime('%B %d %Y') %>, Last updated <%= blog.updated_at.strftime('%B %d') if blog.updated_at %>.
      </div>
      <div class="panel-body">
        <%= blog.body.first(400).humanize %>
      </div>
      <div class="panel-body">
        <%= link_to "Edit", edit_blog_path(blog) %> | <%= link_to "Delete", blog, method: :delete, data: { confirm: 'Are you sure?' } %>  
      </div>
    </div>
  <% end %>
  <%= will_paginate @blogs %>
</section>
