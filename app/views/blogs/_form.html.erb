<%= form_for(@blog) do |f| %>
  <!-- ERROR REPORTING -->
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- FIELDS HERE -->

  <div class="field"><!-- CREATOR -->
    <%= f.label :creator %><br>
    <%= f.text_field :creator, required: true %>
  </div>
  <div class="field" > <!-- TITLE -->
    <%= f.label :title %><br>
    <%= f.text_field :title, required: true %>
  </div>
  <div class="field text-area"> <!-- BODY -->
    <%= f.label :body %><br>
    <%= f.text_area :body, required: true %>
  </div>
  <div class="field"> <!-- DATE -->
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="actions"> <!-- SUBMIT BUTTON -->
    <%= f.submit %>
  </div>
<% end %>
