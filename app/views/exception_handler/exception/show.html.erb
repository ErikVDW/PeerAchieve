<% if @status.to_s == "404" %>
	<div class="jumbotron background-image-7">
		<div class="container" style="height: 700px;">
			<div class="row">
				<div class="col-md-12">
					<h2>404 - We didn't find the page you're looking for.</h2>
					<p>If you don't know where to go, or think this is an error, <%= link_to 'contact us', contact_path %>.</p>
				</div>
			</div>
		</div>
	</div>

<% else %>

	<div class="error">

		<!--Alert -->
		<%= image_tag 'exception_handler/alert.png', width: "150", alt: "Error!", title: "Sorry, A Server Error Occurred", class: "alert" %>
	
		<!--Message -->
		<div class="message">
			<strong><%= details[:name] %></strong>
			<span><%= details[:message] %></span>
		</div>

		<!--Contact -->
		<div class="contact">
			<% ExceptionHandler.config.social.each do |item, address| %>
				<%= link_to image_tag("exception_handler/contact/#{item}.png", title: item.to_s.titleize), address, target: :blank %>
			<% end %>
		</div>
		
	</div>

<% end %>